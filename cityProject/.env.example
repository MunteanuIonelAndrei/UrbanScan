# Project Information
PROJECT_NAME=City Problem Reporter
VERSION=0.1.0
DESCRIPTION=A platform for citizens to report city problems with photos and location data

# API
API_V1_STR=/api

# Security
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS
CLIENT_ORIGIN=http://localhost:3000
ADMIN_ORIGIN=http://localhost:3001

# Frontend static files (for production)
CLIENT_STATIC_DIR=../frontend/client/build
ADMIN_STATIC_DIR=../frontend/admin/build

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5435
POSTGRES_USER=andrei
POSTGRES_PASSWORD=andrei
POSTGRES_DB=city_reporter

# Upload directory
UPLOAD_DIR=uploads

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4

# Debug mode
DEBUG=true

# First admin user (created on startup if none exists)
FIRST_ADMIN_USERNAME=admin
FIRST_ADMIN_PASSWORD=adminpassword